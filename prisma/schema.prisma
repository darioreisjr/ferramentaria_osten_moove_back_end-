generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tool {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String
  status         ToolStatus
  collectionDate DateTime?
  returnDate     DateTime?
  mechanic       String?
}

enum ToolStatus {
  Available
  Reserved
  InUse
}
